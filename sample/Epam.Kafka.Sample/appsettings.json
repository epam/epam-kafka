{
  "Logging": {
    "LogLevel": {
      //"Default": "Information"
      "Default": "Debug",
      "Microsoft": "Warning"
    }
  },
  "Kafka": {
    "Default": {
      "Cluster": "Sandbox",
      "Consumer": "Default",
      "Producer": "Default",
      "Subscription": {
        "BatchSize": 100,
        "BatchEmptyTimeout": "00:00:10",
        "ExternalStateCommitToKafka": true,
        "PipelineRetryTimeout": "00:00:30"
      }
    },
    "Clusters": {
      "Sandbox": {
        "client.id": "<DomainName>@<MachineName>",
        "bootstrap.servers": "localhost:9092",
        "allow.auto.create.topics": true
      },
      "Production": {
        "bootstrap.servers": "localhost:9092",
        "allow.auto.create.topics": false
      }
    },
    "Producers": {
      "Default": {},
      "Transactional": {
        "transactional.id": "producer.epam-kafka-sample"
      }
    },
    "Consumers": {
      "Default": {
        "group.id": "consumer.epam-kafka-sample"
      },
      "Republish": {
        "group.id": "consumer.epam-kafka-sample.republish"
      }
    },
    "Subscriptions": {
      "Sample": {
        "Topics": "epam-kafka-sample-topic-2"
      }
    },
    "Publications": {
      "Sample": {
        "DefaultTopic": "epam-kafka-sample-topic-3"
      }
    }
  }
}